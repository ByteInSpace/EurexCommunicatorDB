<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat" />

    <!-- Base application theme. -->

    <style name="EurexCommunicatorTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:popupMenuStyle">@style/MyApp.PopupMenu</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
       </style>

    <style name="MyApp.PopupMenu" parent="android:Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@color/bar_background</item>
    </style>


    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
    </style>

    <style name="EurexCommunicatorToolbarStyle">
        <item name="android:maxHeight">@dimen/abc_action_bar_default_height_material</item>
        <item name="android:listPreferredItemHeight">5dp</item>
        <item name="android:background">@color/bar_background</item>
        <item name="android:textColorPrimary">@color/bar_text</item>
        <item name="android:textColorSecondary">@color/bar_text</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="actionMenuTextColor">@color/bar_text</item>
    </style>

    <style name="EurexCommunicatorMenu" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@color/menu_background</item>
        <item name="android:textColor">@color/menu_text</item>
    </style>

    <style name="EurexCommunicatorDrawerStyle">
        <item name="android:background">@color/menu_background</item>
        <item name="android:textColor">@color/menu_text</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">16dp</item>

     </style>
    <style name="EurexCommunicatorMenuTextStyle">
        <item name="android:textSize">16dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="EurexCommunicatorMainView">
        <item name="android:background">@color/backgroundMainView</item>
        <item name="android:textColor">@color/menu_text</item>
        <item name="android:textSize">24dp</item>
        <item name="android:divider">@color/backgroundMainView</item>


    </style>

    <style name="EurexCommunicatorBigHeadline">
        <item name="android:textColor">@color/colorHeadline</item>
        <item name="android:textSize">24dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="EurexCommunicatorHeadline">
        <item name="android:textColor">@color/colorHeadline</item>
        <item name="android:textSize">16dp</item>
    </style>
    <style name="EurexCommunicatorSubHeadline">
        <item name="android:textColor">@color/colorSubHeadline</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="EurexCommunicatorDate">
        <item name="android:textColor">@color/colorDate</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="EurexCommunicatorRegularText">
        <item name="android:textColor">@color/colorHeadline</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="EurexCommunicatorRegularTextSmall" parent="EurexCommunicatorRegularText">
        <item name="android:textSize">12dp</item>
    </style>

    <style name="EurexCommunicatorRate">
        <item name="android:textColor">@color/rate</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="EurexCommunicatorMainViewIcons">
        <item name="android:layout_margin">24dp</item>
    </style>

    <style name="EurexCommunicatorButton">
        <item name="android:textColor">@color/buttonTextColor</item>
        <item name="android:textSize">11dp</item>
        <item name="android:background">@color/buttonBackgroundColor</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="EurexCommunicatorTag">
        <item name="android:textSize">11dp</item>
        <item name="android:background">@color/tagBackground</item>
        <item name="android:textColor">@color/tagColorText</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:padding">4dp</item>
    </style>

</resources>
