<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:background="@color/colorBackground"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:descendantFocusability="blocksDescendants"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        >

        <TextView android:id="@+id/rep_time"
            android:layout_marginTop="4dp"
            android:layout_height="wrap_content"

            android:clickable="false"
            android:focusable="false"
            android:layout_width="80dp"
            android:focusableInTouchMode="false"
            style="@style/EurexCommunicatorDate"

            />
    <TableLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:paddingBottom="6dp"
        >

        <TableRow>

            <TextView android:id="@+id/rep_title"
                android:layout_marginTop="4dp"
                android:layout_marginRight="4dp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/rep_time"
                style="@style/EurexCommunicatorHeadline"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:maxLines="1"
                android:layout_weight="1"
                />
        </TableRow>
        <TableRow>

            <TextView android:id="@+id/estimated"
                android:layout_marginTop="4dp"
                android:layout_marginRight="4dp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/rep_time"
                style="@style/EurexCommunicatorRegularText"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:maxLines="1"
                android:layout_weight="1"
                />
        </TableRow>

    </TableLayout>

</LinearLayout>

</RelativeLayout>