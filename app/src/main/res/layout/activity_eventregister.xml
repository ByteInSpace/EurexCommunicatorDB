<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:id="@+id/toolbar"
            android:elevation="4dp"
            style="@style/EurexCommunicatorToolbarStyle"
            app:popupTheme="@style/EurexCommunicatorToolbarStyle"

            >
        </android.support.v7.widget.Toolbar>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        android:layout_below="@+id/toolbar"
        >

        <TableRow>
            <TextView android:id="@+id/evr_name"
                android:layout_margin="10dp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                style="@style/EurexCommunicatorHeadline"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:maxLines="1"
                android:layout_weight="1"
                android:layout_span="2"
                />
        </TableRow>

        <TableRow>
            <TextView android:id="@+id/evr_ort_head"
                android:layout_margin="10dp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                style="@style/EurexCommunicatorSubHeadline"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:maxLines="1"
                android:layout_weight="1"
                android:text="@string/ort"
                />
            <TextView android:id="@+id/evr_ort"
                android:layout_margin="10dp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                style="@style/EurexCommunicatorSubHeadline"
                android:layout_toRightOf="@id/evr_ort_head"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:maxLines="1"
                android:layout_weight="1"
                />
        </TableRow>

        <TableRow>
            <TextView android:id="@+id/evr_datum_head"
                android:layout_margin="10dp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                style="@style/EurexCommunicatorSubHeadline"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:maxLines="1"
                android:layout_weight="1"
                android:text="@string/datum"
                />
            <TextView android:id="@+id/evr_datum"
                android:layout_margin="10dp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                style="@style/EurexCommunicatorSubHeadline"
                android:layout_toRightOf="@id/evr_datum_head"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:maxLines="1"
                android:layout_weight="1"
                />
        </TableRow>


        <TableRow>
            <TextView android:id="@+id/evr_vorname_head"
                android:layout_margin="10dp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                style="@style/EurexCommunicatorRegularText"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:maxLines="1"
                android:layout_weight="1"
                android:text="@string/vorname"
                />
            <TextView android:id="@+id/evr_uservorname"
                android:layout_margin="10dp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                style="@style/EurexCommunicatorRegularText"
                android:layout_toRightOf="@id/evr_vorname_head"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:maxLines="1"
                android:layout_weight="1"
                />
        </TableRow>
        <TableRow>
            <TextView android:id="@+id/evr_username_head"
                android:layout_margin="10dp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                style="@style/EurexCommunicatorRegularText"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:maxLines="1"
                android:layout_weight="1"
                android:text="@string/nachname"
                />
            <TextView android:id="@+id/evr_nachname"
                android:layout_margin="10dp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                style="@style/EurexCommunicatorRegularText"
                android:layout_toRightOf="@id/evr_username_head"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:maxLines="1"
                android:layout_weight="1"
                />
        </TableRow>
        <TableRow>
            <Button
                android:text="Register"
                android:layout_margin="10dp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:maxLines="1"
                android:layout_weight="1"
                android:layout_span="2"
                style="@style/EurexCommunicatorButton"
                />
        </TableRow>
    </TableLayout>

    </RelativeLayout>

    <ListView
        android:id="@+id/navList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left|start"
        style="@style/EurexCommunicatorDrawerStyle"

        />

</android.support.v4.widget.DrawerLayout>
