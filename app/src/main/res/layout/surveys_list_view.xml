<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:background="@color/colorBackground"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:descendantFocusability="blocksDescendants"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        >
    <TableLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:paddingBottom="6dp"
        >
        <TableRow>

            <TextView android:id="@+id/srv_dueto"
                android:layout_marginTop="4dp"
                android:layout_width="40dp"
                android:layout_height="wrap_content"

                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                style="@style/EurexCommunicatorDate"

                />
            <TextView android:id="@+id/srv_subheadline"
                android:layout_marginTop="4dp"
                android:layout_marginRight="4dp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/srv_dueto"
                 android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                style="@style/EurexCommunicatorSubHeadline"
                android:maxLines="1"
                android:layout_weight="1"

                />
        </TableRow>
        <TableRow>
            <TextView android:id="@+id/srv_date"
                android:layout_marginTop="4dp"
                android:layout_height="wrap_content"
                 android:clickable="false"
                android:focusable="false"
                android:layout_width="80dp"
                android:focusableInTouchMode="false"
                style="@style/EurexCommunicatorDate"
                />
            <TextView android:id="@+id/srv_headline"
                android:layout_marginTop="4dp"
                android:layout_marginRight="4dp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/srv_date"
                style="@style/EurexCommunicatorHeadline"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:maxLines="1"
                android:layout_weight="1"
                />
        </TableRow>

    </TableLayout>
    <ImageView android:id="@+id/srv_register"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="6dp"
        android:layout_height="30dp"
        android:layout_width="30dp"
        android:clickable="false"
        android:focusable="false"
        android:layout_gravity="top"
        android:focusableInTouchMode="false"
        />
    </LinearLayout>

</RelativeLayout>