<?xml version="1.0" encoding="utf-8"?>


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="3dp"
        android:background="@color/colorBackground"
        >

        <ImageView android:id="@+id/mailing_image"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="6dp"
            android:layout_height="30dp"
            android:layout_width="30dp"
            android:clickable="false"
            android:focusable="false"
            android:layout_gravity="top"
            android:focusableInTouchMode="false"
            android:src="@drawable/eurex"

            />
        <TableLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:paddingBottom="6dp"
            >
            <TableRow>

                <TextView android:id="@+id/mailing_headline"
                    android:layout_marginTop="4dp"
                    android:layout_width="40dp"
                     android:layout_height="wrap_content"
                    android:textColor="@color/colorHeadline"
                    android:clickable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    />
                <TextView android:id="@+id/mailing_date"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/mailing_headline"
                    android:textColor="@color/colorDate"
                    android:clickable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:textSize="@dimen/text_size_small"
                    android:maxLines="1"
                    android:layout_weight="1"

                    />
            </TableRow>
            <TableRow>
                <TextView android:id="@+id/mailing_text"
                    android:layout_marginTop="4dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorSubHeadline"
                    android:clickable="false"
                    android:focusable="false"
                    android:layout_width="220dp"
                    android:focusableInTouchMode="false"
                    android:textSize="@dimen/text_size_small"


                    />

                <ImageView
                    android:id="@+id/mailing_favorite"
                    android:layout_toRightOf="@id/mailing_text"
                    android:layout_gravity="center"
                    />
            </TableRow>

        </TableLayout>
    </LinearLayout>

