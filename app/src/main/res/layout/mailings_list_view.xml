<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:background="@color/colorBackground"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:descendantFocusability="blocksDescendants"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        >

        <ImageView android:id="@+id/mailing_image"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="6dp"
            android:layout_height="30dp"
            android:layout_width="30dp"
            android:clickable="false"
            android:focusable="false"
            android:layout_gravity="top"
            android:focusableInTouchMode="false"


            />
        <TableLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:paddingBottom="6dp"
            >
            <TableRow>

                <TextView android:id="@+id/mailing_headline"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="40dp"
                     android:layout_height="wrap_content"
                    style="@style/EurexCommunicatorHeadline"
                    android:clickable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    />
                <TextView android:id="@+id/mailing_date"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/mailing_headline"
                    style="@style/EurexCommunicatorDate"
                    android:clickable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:maxLines="1"
                    android:layout_weight="1"

                    />
            </TableRow>
            <TableRow>
                <TextView android:id="@+id/mailing_text"
                    android:layout_marginTop="4dp"
                    android:layout_height="wrap_content"
                    style="@style/EurexCommunicatorRegularTextSmall"
                    android:clickable="false"
                    android:focusable="false"
                    android:layout_width="220dp"
                    android:focusableInTouchMode="false"
                    />

                <ImageView
                    android:id="@+id/mailing_favorite"
                    android:layout_toRightOf="@id/mailing_text"
                    android:layout_gravity="center"
                    />
            </TableRow>
            <TableRow>
                <RelativeLayout>
                <TextView android:id="@+id/tag1"
                    android:layout_marginTop="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/EurexCommunicatorTag"
                    android:clickable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    />
                <TextView android:id="@+id/tag2"
                    android:layout_marginTop="4dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    style="@style/EurexCommunicatorTag"
                    android:clickable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:layout_toRightOf="@id/tag1"
                    />
                <TextView android:id="@+id/tag3"
                    android:layout_marginTop="4dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    style="@style/EurexCommunicatorTag"
                    android:clickable="false"
                    android:focusable="false"
                    android:layout_toRightOf="@id/tag2"
                    android:focusableInTouchMode="false"/>
                </RelativeLayout>
            </TableRow>


        </TableLayout>


    </LinearLayout>

</RelativeLayout>


